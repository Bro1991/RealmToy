<?xml version="1.0" encoding="utf-8"?>
<com.memolease.realmtoy.PageCurlFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/title_txt"
            android:background="#ddd"
            android:elevation="7dp">

            <com.memolease.realmtoy.util.TopCropImageView
                android:id="@+id/book_image"
                android:paddingTop="4dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom"
                android:layout_marginTop="4dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="false"
                android:background="#00000000"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:scaleType="fitStart"
                android:src="@drawable/book_upon" />


            <ImageView
                android:layout_width="4dp"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:alpha="0.3"
                android:src="@drawable/lendbook_gradient" />

            <ImageView
                android:layout_width="4dp"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:paddingTop="4dp"
                android:adjustViewBounds="false"
                android:alpha="0.4"
                android:src="@drawable/lendbook_gradient_left" />

        </FrameLayout>
        <TextView
            android:id="@+id/title_txt"
            android:background="#0e0e0e"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="title"/>
    </RelativeLayout>

<!--    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/konfettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />-->

    <dyanamitechetan.vusikview.VusikView
        android:id="@+id/vusikView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:fallSpeed="0.13"/>

    <LinearLayout
        android:id="@+id/menu_container"
        android:visibility="invisible"
        android:background="#d3000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/button1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="1"
                android:layout_height="wrap_content" />

            <Button
                android:text="2"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:text="3"
                android:id="@+id/button3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</com.memolease.realmtoy.PageCurlFrameLayout>