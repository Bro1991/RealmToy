            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:baselineAlignBottom="false"
                android:layout_alignParentLeft="true"
                android:id="@+id/bookImageFrame">

                <com.memolease.realmtoy.util.TopCropImageView
                    android:id="@+id/bookImageView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"

                    android:layout_gravity="bottom"
                    android:layout_marginTop="2dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/exist_state"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:alpha="0.6"
                    android:adjustViewBounds="false"
                    android:background="#000000"
                    android:src="@drawable/ic_check_circle_white_24dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:scaleType="center"
                    android:gravity="center"
                    android:layout_gravity="bottom|center_horizontal"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="false"
                    android:background="#00000000"
                    android:elevation="7dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"

                    android:scaleType="fitStart"
                    android:src="@drawable/book_upon" />

                <ImageView
                    android:layout_width="4dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:layout_marginTop="2dp"
                    android:alpha="0.3"
                    android:src="@drawable/lendbook_gradient" />

                <ImageView
                    android:layout_width="4dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="left"
                    android:layout_marginTop="2dp"
                    android:adjustViewBounds="false"
                    android:alpha="0.4"
                    android:src="@drawable/lendbook_gradient_left" />
            </FrameLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/bookImageFrame"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="책 제목"
                    android:id="@+id/bookTitle"
                    android:maxLines="2"
                    android:layout_marginBottom="5dp"
                    android:textColor="#333333"
                    android:minLines="2"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:ellipsize="end" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="저자"
                    android:id="@+id/bookAuthor"
                    android:textSize="13dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:minLines="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="출판사"
                    android:id="@+id/bookPublisher"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-01-01"
                    android:id="@+id/bookPublishDate"
                    android:textSize="13dp" />
            </LinearLayout>


        </RelativeLayout>

        <info.hoang8f.android.segmented.SegmentedGroup
            xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            segmentedgroup:sc_border_width="1dp"
            segmentedgroup:sc_corner_radius="3dp"
            segmentedgroup:sc_tint_color="@color/aqua_color"
            android:layout_weight="4"
            android:id="@+id/radioGroup">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="구입희망"
                android:id="@+id/radioButton"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                style="@style/RadioButton"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="읽을 예정"
                android:id="@+id/radioButton2"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                style="@style/RadioButton"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="읽는 중"
                android:id="@+id/radioButton3"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                style="@style/RadioButton"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="다 읽음"
                android:id="@+id/radioButton4"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                style="@style/RadioButton"/>
        </info.hoang8f.android.segmented.SegmentedGroup>

