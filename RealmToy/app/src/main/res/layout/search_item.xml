<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:background="@drawable/thin_boder_bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <FrameLayout
                android:id="@+id/bookImageFrame"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:baselineAlignBottom="false">

                <com.memolease.realmtoy.util.TopCropImageView
                    android:id="@+id/bookImageView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"

                    android:layout_gravity="bottom"
                    android:layout_marginTop="2dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/exist_state"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="bottom|center_horizontal"
                    android:adjustViewBounds="false"
                    android:alpha="0.6"
                    android:background="#000000"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/ic_check_circle_white_24dp"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="false"
                    android:background="#00000000"
                    android:elevation="7dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"

                    android:scaleType="fitStart"
                    android:src="@drawable/book_upon" />

                <ImageView
                    android:layout_width="4dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:layout_marginTop="2dp"
                    android:alpha="0.3"
                    android:src="@drawable/lendbook_gradient" />

                <ImageView
                    android:layout_width="4dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="left"
                    android:layout_marginTop="2dp"
                    android:adjustViewBounds="false"
                    android:alpha="0.4"
                    android:src="@drawable/lendbook_gradient_left" />
            </FrameLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/bookImageFrame"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/bookTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:minLines="2"
                    android:text="책 제목"
                    android:textColor="#333333"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/bookAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:minLines="1"
                    android:text="저자"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/bookPublisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="출판사"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/bookPublishDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-01-01"
                    android:textSize="13dp" />
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>


</LinearLayout>